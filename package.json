{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/marcoscuomo/puf-api",
  "author": "Marcos Souza <marcos.souza@beeleads.com.br>",
  "license": "MIT",
  "scripts": {
    "fix": "run-s \"fix:* {@}\" --",
    "fix-lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.(js|ts|md|json)'",
    "lint": "yarn fix:lint srx/**/*.{js,ts,md,json}",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**/*.{js,ts,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^5.1.13",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  }
}
