{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/marcoscuomo/puf-api",
  "author": "Marcos Souza <marcos.souza@beeleads.com.br>",
  "license": "MIT",
  "scripts": {
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.(js|ts|md|json)'",
    "lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
    "test": "yarn jest",
    "prepare": "husky install",
    "dev": "nodemon --exec babel-node -- -r dotenv-safe/config src/index.js",
    "prebuild": "rm -rf ./dist",
    "build": "babel src --extensions \".js\" --ignore \"*.spec.js, *.test.js\" --out-dir dist --copy-files"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**/*.{js,ts,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.0",
    "@babel/node": "^7.18.10",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/preset-env": "^7.19.0",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^5.1.13",
    "jest": "^29.0.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@prisma/client": "4.3.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.2",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.23.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "prisma": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}
